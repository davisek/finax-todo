    "components": {
        "schemas": {
            "AppResponse": {
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "success",
                            "error",
                            "warning",
                            "info"
                        ],
                        "example": "success"
                    },
                    "toast": {
                        "type": "boolean",
                        "example": false
                    },
                    "message": {
                        "type": "string",
                        "example": "Operation successful.",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "TodoResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Buy groceries"
                    },
                    "description": {
                        "type": "string",
                        "example": "Milk, eggs, bread",
                        "nullable": true
                    },
                    "completed": {
                        "type": "boolean",
                        "example": false
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2026-02-17 12:00:00"
                    }
                },
                "type": "object"
            },
            "TodoSimpleResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Buy groceries"
                    },
                    "completed": {
                        "type": "boolean",
                        "example": false
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2026-02-17 12:00:00"
                    }
                },
                "type": "object"
            },
            "TodoStatsResource": {
                "properties": {
                    "total": {
                        "type": "integer",
                        "example": 25
                    },
                    "completed": {
                        "type": "integer",
                        "example": 10
                    },
                    "pending": {
                        "type": "integer",
                        "example": 15
                    }
                },
                "type": "object"
            },
            "AuthResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Test User"
                    },
                    "email": {
                        "type": "string",
                        "example": "test@gmail.com"
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2026-02-17 12:00:00"
                    }
                },
                "type": "object"
            },
            "AuthResponse": {
                "properties": {
                    "user": {
                        "$ref": "#/components/schemas/AuthResource"
                    },
                    "access_token": {
                        "type": "string",
                        "example": "1|abc123..."
                    },
                    "expires_in": {
                        "type": "integer",
                        "example": 900
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
