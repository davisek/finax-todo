        "/api/v1/auth/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Refresh access token",
                "operationId": "abe1b2ca85be2c63cc35c86d3d7e677e",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/AppResponse"
                                        },
                                        {
                                            "properties": {
                                                "auth": {
                                                    "properties": {
                                                        "access_token": {
                                                            "type": "string",
                                                            "example": "1|abc123..."
                                                        },
                                                        "expires_in": {
                                                            "type": "integer",
                                                            "example": 900
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid or expired refresh token"
                    }
                }
            }
