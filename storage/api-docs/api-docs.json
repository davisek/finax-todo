                                                                "last_page": {
                                                                    "type": "integer",
                                                                    "example": 3
                                                                },
                                                                "per_page": {
                                                                    "type": "integer",
                                                                    "example": 10
                                                                },
                                                                "total": {
                                                                    "type": "integer",
                                                                    "example": 25
                                                                }
                                                            },
                                                            "type": "object"
